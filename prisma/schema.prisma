datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------------------------------------------------------
// ENUMS
// ---------------------------------------------------------

enum Role {
  DEVELOPER
  ADMIN
  SUPORTE
  CLIENTE_ADMIN
  CLIENTE_USER
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_DOCS // Sugestão: Pendente de documentação
}

// Novo Enum para Enquadramento Fiscal
enum TaxRegime {
  SIMPLES_NACIONAL
  SIMPLES_NACIONAL_EXCESSO
  LUCRO_PRESUMIDO
  LUCRO_REAL
  MEI
}

// ---------------------------------------------------------
// MODELOS
// ---------------------------------------------------------

model Company {
  id            String        @id @default(cuid())
  
  // DADOS PRINCIPAIS
  cnpj          String        @unique
  razaoSocial   String
  nomeFantasia  String?
  status        CompanyStatus @default(ACTIVE)
  
  // DADOS FISCAIS (Novos)
  inscricaoEstadual  String?  // Crucial para comércio
  inscricaoMunicipal String?  // Crucial para serviços
  regimeTributario   TaxRegime? // Enquadramento

  // CONTATO
  emailContato String?
  telefone     String?
  website      String?

  // ENDEREÇO (Novos)
  cep         String?
  logradouro  String?
  numero      String?
  complemento String?
  bairro      String?
  cidade      String?
  estado      String?

  // RELAÇÃO COM CONTABILIDADE (Auto-relacionamento)
  // Uma empresa pode ter uma contabilidade vinculada (que também é uma Company no sistema)
  accountingFirmId String?
  accountingFirm   Company?  @relation("AccountantClient", fields: [accountingFirmId], references: [id])
  
  // Se esta empresa FOR uma contabilidade, ela terá vários clientes:
  accountingClients Company[] @relation("AccountantClient")

  // RELAÇÃO COM CONTRATOS (CORREÇÃO APLICADA AQUI)
  contracts Contract[]

  // EXTRAS
  observacoes String? @db.Text // Campo de texto longo para notas internas

  // METADADOS
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // RELAÇÃO N:N COM USUÁRIOS
  users         User[]        @relation("CompanyUsers")

  @@map("company")
}

model User {
  id             String    @id @default(cuid())
  
  // Auth Fields
  email          String    @unique
  name           String?
  emailVerified  Boolean   @default(false)
  image          String?
  
  // CORREÇÃO: Campo de senha adicionado
  password       String?    
  
  // Role & Status
  role           Role      @default(CLIENTE_USER)
  isActive       Boolean   @default(true)

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // RELAÇÃO N:N
  companies      Company[] @relation("CompanyUsers")

  // Auth Relations
  sessions       Session[]
  accounts       Account[]

  @@map("user") // Nome da tabela no banco: "user"
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// Adicione ao seu schema.prisma

model Contract {
  id            String   @id @default(cuid())
  
  percentage    Float    // Ex: 10.5 para 10.5%
  minimumWage   Float    // Valor do salário mínimo base na época (Ex: 1412.00)
  taxRate       Float    @default(0) // Percentual de imposto a descontar (Ex: 6.0 para 6%)
  
  startDate     DateTime @default(now())
  status        String   @default("ACTIVE") // ACTIVE, CANCELLED, SUSPENDED
  
  // Relacionamentos
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}